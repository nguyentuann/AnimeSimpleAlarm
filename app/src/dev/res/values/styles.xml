<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnNormal" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:backgroundTint">@color/surface</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
        <item name="android:paddingHorizontal">@dimen/dp_12</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="btnCircle" parent="Widget.Material3.Button">
        <!-- Kích thước -->
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">@dimen/dp_80</item>

        <!-- Thêm background shape tròn -->
        <item name="android:background">@drawable/btn_circle</item>

        <!-- Màu nền và text -->
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text</item>

        <!-- Cỡ chữ -->
        <item name="android:textSize">14sp</item>

        <!-- Hiệu ứng ripple khi nhấn -->
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <!-- Xóa padding nếu có -->
        <item name="android:padding">0dp</item>
    </style>

    <style name="NumberPickerDark" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/surface</item>
        <item name="android:colorBackground">@color/surface</item>
    </style>



    <style name="AddAlarmConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/border_field</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="TimePickerDialogStyle" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <!-- Màu chính -->
        <item name="colorPrimaryContainer">@color/secondary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorPrimary">@color/secondary</item>

        <item name="colorTertiaryContainer">@color/secondary</item>
        <item name="colorOnTertiaryContainer">@color/white</item>

        <!-- Nền của dialog -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Màu chữ nút OK/Cancel -->
        <item name="buttonStyle">@style/TimePickerTextButtonStyle</item>
    </style>

    <style name="DatePickerDialogStyle" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Màu chính -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Màu cho ngày được chọn -->
        <item name="colorTertiaryContainer">@color/secondary</item>
        <item name="colorOnTertiaryContainer">@color/white</item>

        <!-- Nền -->
        <item name="colorSurface">@color/secondary</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Nút -->
        <item name="buttonStyle">@style/TimePickerTextButtonStyle</item>
    </style>


    <style name="TimePickerTextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
    </style>



    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- màu chữ cho list item -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TimeButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:alpha">0.0</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


</resources>
